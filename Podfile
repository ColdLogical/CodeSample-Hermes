target 'Hermes' do
        # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
        use_frameworks!

        # Pods for Hermes
        pod 'Alamofire', '~> 4.4'
        pod 'AlamofireImage', '~> 3.1'
        pod 'Firebase/Core'
        pod 'SwiftyJSON'

end

target 'HermesTests' do
        inherit! :search_paths
        # Pods for testing
end
